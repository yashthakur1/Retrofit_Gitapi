<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/switch_thumb_disabled_material_dark"
    tools:context="com.example.yashthakur.testapp.Details"

    android:id="@+id/detailspage">

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/background_floating_material_light"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile Details"
        android:textSize="40dp"
        tools:ignore="MissingPrefix"
        fontpath="Roboto-Thin.ttf"
        android:id="@+id/Details_Header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Details_Header"
        android:background="#4bffffff">

        <TextView
            android:textColor="@color/background_floating_material_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="content"
            android:id="@+id/content" />
    </LinearLayout>



</RelativeLayout>
